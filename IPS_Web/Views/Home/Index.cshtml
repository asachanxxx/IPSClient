            var Tot4 = parseInt(0);
            var id = id;

            if (id == 1) {

                qty = document.getElementById('QTY11').value;
                document.getElementById("Id1A").innerHTML = (10 - qty);
                Tot1 = qty * 400.00;
                document.getElementById("Tot1").innerHTML = Tot1;
                document.getElementById("ToSu").innerHTML = Tot1;
                document.getElementById('ToSu1').value = Tot1;
                document.getElementById("ToSF").innerHTML = qty;
                document.getElementById("ToTF").innerHTML = Tot1;
                document.getElementById("TotCart").innerHTML = qty;
                document.getElementById('Totqty').value = qty;
                document.getElementById("TS").innerHTML = qty;
                document.getElementById("TA").innerHTML = Tot1;

            }

            else if (id == 2) {
                qty = document.getElementById('QTY12').value;
                document.getElementById("Id2A").innerHTML = (20 - qty);
                Tot2 = qty * 200.00;
                Totqty = parseInt(Totqty) + parseInt(qty);
                document.getElementById("Tot2").innerHTML = Tot2;

                Tot = parseInt(Tot) + parseInt(Tot2);
                document.getElementById("ToSu").innerHTML = Tot;
                document.getElementById('ToSu1').value = Tot;
                document.getElementById("ToSF").innerHTML = Totqty;
                document.getElementById("ToTF").innerHTML = Tot;
                document.getElementById("TotCart").innerHTML = Totqty;
                document.getElementById("TS").innerHTML = Totqty;
